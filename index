  <script>
    const form = document.getElementById("predictForm");
    const resultBox = document.getElementById("result");

    form.addEventListener("submit", function(e) {
      e.preventDefault();

      const name = document.getElementById("name").value.trim();
      const habit = document.getElementById("habit").value.trim();

      if (!name || !habit) {
        resultBox.textContent = "‚ö†Ô∏è Please enter both name and habit.";
        resultBox.style.display = "block";
        return;
      }

      // Constant reply with name included
      resultBox.innerHTML = `<strong>${name}</strong>, you are useless üòÖ`;
      resultBox.style.display = "block";
    });
  </script>
